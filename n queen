N = 8  # Number of queens

def is_safe(board, row, col):
    for i in range(row):
        if board[i] == col or abs(board[i]-col) == abs(i-row):
            return False
    return True

def solve_nqueens(row=0, board=[]):
    if row == N:
        print(board)
        return True
    for col in range(N):
        if is_safe(board, row, col):
            if solve_nqueens(row+1, board + [col]):
                return True
    return False

solve_nqueens()
